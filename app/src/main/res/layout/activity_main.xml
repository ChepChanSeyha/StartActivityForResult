<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:gravity="center" android:id="@+id/EditTextA" android:layout_gravity="center"/>
    <Spinner
            android:layout_width="138dp"
            android:layout_height="50dp" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" android:gravity="center" android:id="@+id/SpinnerOperation"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/EditTextB" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:gravity="center" android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:background="#D5D6D6">
    </LinearLayout>
    <TextView
            android:layout_width="350dp"
            android:layout_height="50dp" android:id="@+id/LastResult" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" android:gravity="center" android:layout_gravity="center"/>
    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/calculate" android:layout_gravity="center"/>
</LinearLayout>