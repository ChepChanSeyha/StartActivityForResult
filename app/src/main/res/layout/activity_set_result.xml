<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetResult" android:orientation="vertical" android:gravity="center_horizontal">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
        <TextView
                android:text="var_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/TextViewA"
                android:textColor="@android:color/black" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        <TextView
                android:text="opts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/TextViewOperation"
                android:textColor="@android:color/black" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        <TextView
                android:text="var_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/TextViewB"
                android:textColor="@android:color/black" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        <TextView
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textColor="@android:color/black" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        <TextView
                android:text="var_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/TextViewResult"
                android:textColor="@android:color/black" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
    </LinearLayout>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/back" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
</LinearLayout>